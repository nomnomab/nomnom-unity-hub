{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Nomnoms Unity Hub",
    "version": "1.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": true
      },
      "window": {
        "show": true
      },
      "protocol": {
        "all": true,
        "asset": true,
        "assetScope": ["**", "**/*"]
      },
      "path": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "Nomnom's Unity Hub",
        "width": 1024,
        "height": 568,
        "minWidth": 1024,
        "minHeight": 568,
        "resizable": true,
        "theme": "Dark",
        "visible": false
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self'",
        "media-src": "'self' asset: https://asset.localhost",
        "img-src": "'self' asset: https://asset.localhost"
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "nomnom-unity-hub",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
